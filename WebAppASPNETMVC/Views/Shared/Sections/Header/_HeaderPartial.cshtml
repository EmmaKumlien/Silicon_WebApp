@{
    var user = await UserManager.GetUserAsync(User);
}

<header>
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/SiliconLogotype_Light.svg" alt="Logotype"></a>
        <div id="menu">
            <nav>
                
                <a class="menu-link" asp-fragment="showcase" asp-action="Home" asp-controller="Default">OverView</a>
                <a class="menu-link" asp-fragment="features" asp-action="Home" asp-controller="Default">Features</a>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="menu-link" asp-action="Index" asp-controller="Course">Courses</a>
                }
                <a class="menu-link" asp-controller="Default">Contact</a>

            </nav>

        </div>
        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>

        </div>

      
        
        <div class="account-buttons">

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="profile">
                    <div class="profile-image">
                        <a asp-controller="Account" asp-action="Details">
                            <img id="profile-image" src="~/images/Account/@user!.ProfileImage" />
                        </a>

                    </div>

                </div>
                
                
            }
            else
            {
                <a class="btn btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-arrow-right-to-bracket"></i><span>Sign in</span></a>
                <a class="btn btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign up</span></a>
            }
            
            

        </div>

        <button class="btn-mobile">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
</header>